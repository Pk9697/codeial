<html>
    <head>
        <title>
        <%= title %>
        </title>
    </head>
    <body>
        <h1>Codeial html page rendered / <%= title %></h1>

        <section id="feed-posts">

            <h4>Posts</h4>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" id="" cols="30" rows="3" placeholder="Type here..."></textarea> 
                <input type="submit" value="Post">
            </form>

            <div id="posts-div-container">
                <ul>
                    <% for(post of posts) { %>

                        <li>
                            <p>
                                <%= post.content %>
                                <br>
                                <small><!--Showing the author-->
                                    <%= post.user.name %>
                                </small>
                            </p>
                            
                        </li>
                        
                        
                    <% } %>
                </ul>

            </div>
            


        </section>
    </body>
</html>