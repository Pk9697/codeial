        <%- style %>
        
    </head>

    <body>
        <header id="layout-header">
            <%- include('_header') %>
        </header>
        <!--access flash here where flash.success should exist with length > 0 which means should not be empty-->
        <!--<% if(flash.success && flash.success.length>0) { %>
            <h5>
                <%= flash.success %>
            </h5>

        <% } %>-->
        <!--include noty flash messages-->

        

        <main id="layout-main">
            <%- body %>
        </main>
    

        <footer id="layout-footer">
            <%- include('_footer') %>
        </footer>
        

        <%- script %>

        <script type="">
            <% if(flash.success && flash.success.length>0) { %>

                new Noty({
                    theme:'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout:'topRight',
                    timeout: 1500
                }).show();

            <% } %>


            <% if(flash.error && flash.error.length>0) { %>

                new Noty({
                    theme:'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout:'topRight',
                    timeout: 1500
                }).show();

            <% } %>
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        
    </body>
</html>