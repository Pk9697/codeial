<html>
    <head>
        <title>
            <%= title  %>
        </title>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">


        <%- style %>
        
    </head>

    <body>
        <header id="layout-header">
            <%- include('_header'); %>
        </header>
        <!--access flash here where flash.success should exist with length > 0 which means should not be empty-->
        <% if(flash.success && flash.success.length>0) { %>
            <h5>
                <%= flash.success %>
            </h5>
        
            

        <% } %>
        

        <main id="layout-main">
            <%- body %>
        </main>
    

        <footer id="layout-footer">
            <%- include('_footer'); %>
        </footer>
        

        <%- script %>
        
    </body>
</html>